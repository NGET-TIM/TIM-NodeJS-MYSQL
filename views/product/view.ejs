<!DOCTYPE html>
<html lang="en">

<%- include('../master/header.ejs') %>

    <body>

        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="productList">
                        <div class="row">
                            <% if (products) { %>
                                <% products.forEach((product) =>  { %>
                                    <div class="card" style="width: 18rem;">
                                        <% if(product.image != "upload/images/product/ ") { %>
                                            <img src="../../<%= product.image %> " class="card-img-top" alt="...">
                                            <% } else { %>
                                                <img src="../../upload/no_image.jpg" class="card-img-top" alt="...">
                                                <% } %>
                                                    <div class="card-body">
                                                        <h5 class="card-title">
                                                            <%= product.name %>
                                                        </h5>
                                                        <p class="card-text">
                                                            <%= product.description %>
                                                        </p>
                                                        <a href="<%= product.id %> " class="btn btn-sm btn-primary">Read More</a>
                                                        <a href="edit/<%= product.id %> " class="btn btn-sm btn-danger">Edit</a>
                                                        <a href="#" class="btn btn-sm btn-warning">
                                                            <%= product.price  %>
                                                        </a>
                                                    </div>
                                    </div>
                                    <% }) } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include("../master/footer.ejs") %>
    </body>

</html>